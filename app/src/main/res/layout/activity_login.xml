<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal">


    <ImageView
        android:layout_width="500dp"
        android:layout_height="340dp"
        android:src="@drawable/green"
        tools:layout_editor_absoluteX="-45dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#20B2AA"
        android:textSize="28dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="346dp"
        tools:ignore="MissingConstraints">

    </TextView>

    <EditText
        android:id="@+id/lemail"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corners"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:textColor="#0d6e6a"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="418dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/lpwd"
        android:layout_width="330dp"
        android:layout_height="40dp"

        android:background="@drawable/rounded_corners"
        android:hint="password"
        android:paddingLeft="20dp"
        android:textColor="#0d6e6a"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/lemail"
        app:layout_constraintStart_toStartOf="@+id/lemail"
        tools:layout_editor_absoluteY="484dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Forget Password?"
        android:textColor="#20B2AA"
        android:textSize="17dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="539dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/llogin"
        android:layout_width="330dp"
        android:layout_height="40dp"

        android:background="@drawable/round_corners"
        android:text="Login"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lpwd"
        tools:layout_editor_absoluteY="573dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="New user? Register here"
        android:textColor="#20B2AA"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/llogin"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/llogin"
        tools:layout_editor_absoluteY="623dp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/btngoogle"
        android:layout_width="51dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/btntr"
        app:layout_constraintTop_toTopOf="@+id/btntr"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/gg"
        tools:layout_editor_absoluteX="169dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/btnfb"
        android:layout_width="33dp"
        android:layout_height="49dp"
        app:layout_constraintTop_toTopOf="@+id/btngoogle"
        app:srcCompat="@drawable/fbb"
        tools:layout_editor_absoluteX="112dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/btntr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/tr"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="668dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>

